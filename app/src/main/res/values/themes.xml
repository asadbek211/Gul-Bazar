<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GulBozor" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_color</item>
        <item name="colorPrimaryVariant">@color/green_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--dork or light-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Fragment transaction animation -->
        <item name="enterAnim">@anim/nav_default_enter_anim</item>
        <item name="exitAnim">@anim/nav_default_exit_anim</item>
        <item name="popEnterAnim">@anim/nav_default_pop_enter_anim</item>
        <item name="popExitAnim">@anim/nav_default_pop_exit_anim</item>

    </style>

    <style name="editTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="hintEnabled">true</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/purple_500</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorControlHighlight">@color/purple_500</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">8dp</item>
    </style>
</resources>