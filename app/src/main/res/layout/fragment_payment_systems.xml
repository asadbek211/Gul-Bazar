<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#F5F5F5"
    android:layout_height="match_parent"
    tools:context=".ui.bottom_nav.payment.ads_price.AdsCostsFragment">
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:padding="16dp"
        android:src="@drawable/ic_back_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginTop="70dp"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:gravity="center"
                android:text="Qaysi tizim orqali to’lov\nqilmoqchisiz?"
                android:textColor="@color/homeGreen"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:backgroundTint="#7CFB81"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">

        <TextView
            android:id="@+id/tvPayId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_bg_tarif"
            android:fontFamily="@font/poppins_bold"
            android:text="To‘lov raqami:    123456"
            android:textColor="@color/homeGreen"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvPayPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center_vertical"
            android:text="To‘lov miqdori:    26 000 so’m"
            android:textColor="@color/homeGreen"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPayId"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/btnPayAnorBank"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/pay_shape"
        app:layout_constraintBottom_toBottomOf="@+id/btnPayApelsin"
        app:layout_constraintEnd_toStartOf="@+id/btnPayApelsin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPayApelsin" />

    <ImageView
        android:id="@+id/btnPayApelsin"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/pay_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

    <ImageView
        android:id="@+id/btnPayClick"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/pay_shape"
        app:layout_constraintBottom_toBottomOf="@+id/btnPayApelsin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnPayApelsin"
        app:layout_constraintTop_toTopOf="@+id/btnPayApelsin" />

    <ImageView
        android:id="@+id/btnPayPayMe"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginEnd="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/pay_shape"
        app:layout_constraintBottom_toBottomOf="@+id/btnPayUzCard"
        app:layout_constraintEnd_toStartOf="@+id/btnPayUzCard"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnPayUzCard" />

    <ImageView
        android:id="@+id/btnPayUzCard"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/pay_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPayApelsin" />

    <ImageView
        android:id="@+id/btnPayHumo"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/pay_shape"
        app:layout_constraintBottom_toBottomOf="@+id/btnPayUzCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnPayUzCard"
        app:layout_constraintTop_toTopOf="@+id/btnPayUzCard" />
</androidx.constraintlayout.widget.ConstraintLayout>