<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_main"
    android:orientation="vertical">

    <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
        android:id="@+id/youTube_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:autoPlay="false"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_you_tube"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/youTube_view"
        app:layout_constraintEnd_toEndOf="@id/youTube_view"
        app:layout_constraintStart_toStartOf="@id/youTube_view"
        app:layout_constraintTop_toTopOf="@id/youTube_view" />

    <ImageView
        android:id="@+id/icon_youtube"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:src="@drawable/ic_youtube_icon"
        app:layout_constraintBottom_toBottomOf="@id/youTube_view"
        app:layout_constraintEnd_toEndOf="@id/youTube_view"
        app:layout_constraintStart_toStartOf="@id/youTube_view"
        app:layout_constraintTop_toTopOf="@id/youTube_view" />

    <TextView
        android:id="@+id/youtube_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:padding="10dp"
        android:text="Mana Koreada yerdan qanday foydalandi."
        android:textColor="#000"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/youTube_view" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="4dp"
        android:background="#8C8C8C"
        app:layout_constraintTop_toBottomOf="@id/youtube_title" />
</androidx.constraintlayout.widget.ConstraintLayout>