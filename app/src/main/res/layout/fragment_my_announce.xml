<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_main">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_place"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="#fff"
            android:padding="8dp"
            android:paddingBottom="4dp"
            android:src="@drawable/ic_gulbazar_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/back_pressed"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="5dp"
            android:padding="18dp"
            android:src="@drawable/ic_back_icon"
            app:layout_constraintStart_toStartOf="@id/logo_place"
            app:layout_constraintTop_toTopOf="@id/logo_place" />

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ECEBEB"
            android:paddingBottom="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo_place">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt_all_p"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Mening eâ€™lonlarim"
                            android:textColor="@color/homeGreen"
                            android:textSize="24dp"
                            android:fontFamily="@font/poppins_bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.core.widget.NestedScrollView
                            android:id="@+id/scroll_nested"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txt_all_p">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/muAnnounceRec"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
                                app:spanCount="2"
                                android:paddingBottom="80dp"
                                tools:listitem="@layout/flower_item" />
                        </androidx.core.widget.NestedScrollView>
                        <ProgressBar
                            android:id="@+id/progress_bar_one_cat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:visibility="gone"
                            android:layout_marginBottom="7dp"
                            android:indeterminateDrawable="@drawable/progress_bar"
                            app:layout_constraintTop_toBottomOf="@id/scroll_nested" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="66dp"
                            app:layout_constraintTop_toBottomOf="@id/scroll_nested" />

                        <TextView
                            android:id="@+id/not_post_yet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="77dp"
                            android:gravity="center"
                            android:padding="10dp"
                            android:text="Hozircha sizda e'lonlar yo'q"
                            android:textColor="@color/naturalDark"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/txt_all_p" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>