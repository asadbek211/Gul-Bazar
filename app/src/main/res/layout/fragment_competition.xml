<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_gulbazar_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/btnSearch"
        android:layout_marginEnd="20dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:tint="@color/secondary_color" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/background_blur"
        app:layout_constraintTop_toBottomOf="@+id/btnSearch"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/best_flower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <ImageView
        android:layout_marginTop="30dp"
        android:id="@+id/btnAddCompetitionFlower"
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/button_bg_tanlov"
        android:clickable="true"
        android:visibility="invisible"
        android:elevation="15dp"
        android:focusable="true"
        android:src="@drawable/ic_plus_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:tint="@color/white" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="invisible"
        android:id="@+id/container1"
        android:elevation="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_shape_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddCompetitionFlower">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/flowerImage1"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/img1"
            android:theme="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLikeCount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="7dp"
            android:text="1232"
            android:textColor="@color/menu_ripple"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgShare1"
            app:layout_constraintStart_toEndOf="@+id/flowerImage1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvData1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="12.06.22"
            android:textColor="#939393"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvLikeCount1"
            app:layout_constraintStart_toStartOf="@+id/tvLikeCount1" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgShare1"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_bg_share"
            android:padding="5dp"
            android:src="@drawable/ic_share_comp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgRemove1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgRemove1"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_bg_red"
            android:padding="8dp"
            android:src="@drawable/ic_delate_comp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="20dp"
        android:id="@+id/container2"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_container"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container1">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/flowerImage2"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/img2"
            android:theme="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLikeCount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="7dp"
            android:text="1092"
            android:textColor="@color/menu_ripple"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgShare2"
            app:layout_constraintStart_toEndOf="@+id/flowerImage2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvData2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="11.06.22"
            android:textColor="#939393"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvLikeCount2"
            app:layout_constraintStart_toStartOf="@+id/tvLikeCount2" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgShare2"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_bg_share"
            android:padding="5dp"
            android:src="@drawable/ic_share_comp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgRemove2"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgRemove2"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_bg_red"
            android:padding="8dp"
            android:src="@drawable/ic_delate_comp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container3"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/button_shape_container"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/container2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/flowerImage3"
            android:layout_width="64dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/img3"
            android:theme="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLikeCount3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:paddingTop="7dp"
            android:text="978"
            android:textColor="@color/menu_ripple"
            android:textSize="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgShare3"
            app:layout_constraintStart_toEndOf="@+id/flowerImage3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvData3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="3.06.22"
            android:textColor="#939393"
            android:textSize="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/tvLikeCount3"
            app:layout_constraintStart_toStartOf="@+id/tvLikeCount3" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgShare3"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_bg_share"
            android:padding="5dp"
            android:src="@drawable/ic_share_comp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imgRemove3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/imgRemove3"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/button_bg_red"
            android:padding="8dp"
            android:src="@drawable/ic_delate_comp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:padding="20dp"
        android:text="Bu bo'lim tez kunda ishga tushiriladi..."
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>