<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/home_to_one"
            app:destination="@id/oneTypeOfCategory"></action>
        <action
            android:id="@+id/home_to_shop"
            app:destination="@id/fragmentShops" />
    </fragment>

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/navigation_category"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.categories.mainCategory.CategoriesFragment"
        android:label="CategoriesFragment"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/navigation_competition"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.competition.CompetitionFragment"
        android:label="CompetitionFragment"
        tools:layout="@layout/fragment_competition" />
    <fragment
        android:id="@+id/container"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.add.add_container.ContainerFragment"
        android:label="ContainerFragment" />
    <fragment
        android:id="@+id/oneTypeOfCategory"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.categories.oneCategory.OneTypeOfCategory"
        android:label="OneTypeOfCategory"
        tools:layout="@layout/fragment_one_category">
        <action
            android:id="@+id/oneType_to_categories"
            app:destination="@id/navigation_category" />
        <argument
            android:name="categoryName"
            android:defaultValue="cat"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/fragmentShops"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.categories.shops_category.FragmentShops"
        android:label="FragmentShops"
        tools:layout="@layout/fragment_shops" />
</navigation>