<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/bottomNavFragment">

    <fragment
        android:id="@+id/bottomNavFragment"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.BottomNavFragment"
        android:label="BottomNavFragment"
        tools:layout="@layout/fragment_bottom_nav">
        <action
            android:id="@+id/home_to_details"
            app:destination="@id/detailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailsFragment"
        android:label="DetailsFragment"
        android:name="com.bizmiz.gulbozor.ui.bottom_nav.home.details.DetailsFragment"
        tools:layout="@layout/fragment_details">
        <action
            android:id="@+id/details_to_home"
            app:destination="@id/bottomNavFragment" />
    </fragment>
</navigation>